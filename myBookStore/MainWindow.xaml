<Window x:Class="myBookStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myBookStore"
        mc:Ignorable="d"
        Title="LOGIN" Height="450" Width="800">
    <Grid>
        <Button Content="LOGIN" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top" Height="44" Width="128" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Center" Margin="0,238,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="256" Height="30" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Center" Margin="0,159,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="256" Height="33" VerticalContentAlignment="Center"/>
        <Label Content="Enter user and password" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Height="33" Width="256" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
