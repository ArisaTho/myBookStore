<Window x:Class="myBookStore.Index"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myBookStore"
        mc:Ignorable="d"
        Title="Index" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnCustomer" Content="Customer Management" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Center" Height="66" Width="192" Click="btnCustomer_Click"/>
        <Button x:Name="btnBook" Content="Book Management" HorizontalAlignment="Center" VerticalAlignment="Center" Height="66" Width="192" Click="btnBook_Click"/>
        <Button x:Name="btnOrder" Content="Order" HorizontalAlignment="Left" VerticalAlignment="Center" Height="66" Width="192" Margin="570,0,0,0" Click="btnOrder_Click"/>
    </Grid>
</Window>
